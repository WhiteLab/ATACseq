{  
    "cutadapt_pe":{
        "path":"/usr/local/bin/cutadapt",
        "flags":{
            "singletons":["--quality-base={quality_base}"],
            "arguments":{
                "-a":["CTGTCTCTTATACACATCT"],
                "-A":["CTGTCTCTTATACACATCT"],
                "-m":["5"],
                "-q":["{min_quality_score}"],
                "-o":["{output_file1}"],
                "-p":["{output_file2}"]
            }
        },
        "arguments":["{input_file1}", "{input_file2}"]
    },
    
    "gzip":{
        "path":"/bin/gzip",
        "flags":{
            "singletons":["-v", "-f"],
            "arguments":{}
        },
        "arguments":["{input_file}"]
    },
    
    "gunzip":{
        "path":"/bin/gunzip",
        "flags":{
            "singletons":["-v", "-f"],
            "arguments":{}
        },
        "arguments":["{input_file}"]
    },
    
    "fastqc":{
        "path":"/home/ubuntu/software/FastQC/fastqc",
        "flags":{
            "singletons":["--outdir={out_dir}", "--extract"],
            "arguments":{}
        },
        "arguments":["{input_file}"]
    },
    
    "bwa_aln":{
        "path":"/home/ubuntu/software/bwa-0.7.12/bwa aln",
        "flags":{
            "singletons":[],
            "arguments":{
                "-t":"8"
            }
        },
        "arguments":["/mnt/cinder/dfitzgeraldSCRATCH/bwa-0.7.12_index/genome.fa", "{input_file} > {output_file}"]
    },
    
    "bwa_sampe":{
        "path":"/home/ubuntu/software/bwa-0.7.12/bwa sampe",
        "flags":{
            "singletons":[],
            "arguments":{
                "-a":["2000"],
                "-n":["1"]
            }
        },
        "arguments":["/mnt/cinder/dfitzgeraldSCRATCH/bwa-0.7.12_index/genome.fa", 
                    "{sai_1} {sai_2} {fastq_1} {fastq_2}"]
    },
    
    "samtools_view":{
        "path":"/usr/bin/samtools view",
        "flags":{
            "singletons":["-h", "-S", "-b"],
            "arguments":{
                "-o":["{output_file}"]
            }
        },
        "arguments":["{input_file}"]
    },
    
    "samtools_flagstat":{
        "path":"/usr/bin/samtools flagstat",
        "flags":{
            "singletons":[],
            "arguments":{}
        },
        "arguments":["{input_file} > {output_file}"]
    },
    
    "FSeq":{
        "path":"/home/ubuntu/software/F-seq/dist/fseq",
        "flags":{
            "singletons":[],
            "arguments":{}
        },
        "arguments":[]
    },
    
    "MACS2":{
        "path":"/usr/local/bin/macs2",
        "flags":{
            "singletons":[],
            "arguments":{}
        },
        "arguments":[]
    },
    
    "bedtools_intersect":{
        "path":"/home/ubuntu/software/bedtools2/bin/bedtools intersect",
        "flags":{
            "singletons":["-v"],
            "arguments":{
                "-abam":["{input_file}"],
                "-b":["{blacklist_bed}"],
                "-f":["0.5"]
            }
        },
        "arguments":["> {output_file}"]
    },
    
    "bedtools_bamtobed":{
        "path":"/home/ubuntu/software/bedtools2/bin/bedtools bamtobed",
        "flags":{
            "singletons":[],
            "arguments":{
                "-i":["{input_file}"]
            }
        },
        "arguments":["> {output_file}"]
    },
    
    "picard_MarkDuplicates":{
        "path":"/usr/bin/java -Xmx2g -jar /home/ubuntu/software/picard/dist/picard.jar MarkDuplicates",
        "flags":{
            "singletons":[],
            "arguments":{}
        },
        "arguments":[]
    },
    
    "igvtools_sort":{
        "path":"/home/ubuntu/software/IGVTools/igvtools sort",
        "flags":{
            "singletons":[],
            "arguments":{
                "-t":["{tmp_dir}"]
            }
        },
        "arguments":["{input_file}", "{output_file}"]
    },
    
    "igvtools_count":{
        "path":"/home/ubuntu/software/IGVTools/igvtools count",
        "flags":{
            "singletons":["--includeDuplicates"],
            "arguments":{
                "--maxZoom":["5"],
                "---windowSize":["25"]
            }
        },
        "arguments":["{input_file}", "{output_file}", "{genome_sizes_file}"]
    },
    
    "script_recover_fragments":{
        "path":"/usr/bin/perl /home/ubuntu/software/scripts/recover_fragments.pl",
        "flags":{
            "singletons":[],
            "arguments":{}
        },
        "arguments":["{input_file}", "{output_file}"]
    },
    
    "novosort":{
        "path":"/home/ubuntu/software/novocraft/novosort",
        "flags":{
            "singletons":[],
            "arguments":{
                "--threads": "8",
                "--tmpcompression": "6",
                "--tmpdir": "{tmp_dir}",
                "--output": "{output_file}",
                "--index": "{input_file}"
            }
        },
        "arguments":[]
    },
    
    "script_offset_ATACseq":{
        "path":"/usr/bin/python /home/ubuntu/software/scripts/offset_ATACseq_20bp_corrected.py",
        "flags":{
            "singletons":[],
            "arguments":{}
        },
        "arguments":["{input_beds_prefix}"]
    },
